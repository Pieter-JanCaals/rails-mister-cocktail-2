<div class="container">
  <h1>Cocktails</h1>
  <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-primary" %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="cocktail-card">
          <div class="cocktail-content">
            <h2><%= cocktail.name %></h2>
            <img src="https://www.maliburumdrinks.com/globalassets/images/cocktail-recipe-images/malibu-island-cosmo.png/" alt="cocktail" width="200">
          </div>
          <div class="cocktail-links">
            <%= link_to 'more info', cocktail_path(cocktail.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
